{
  "name": "format-logs",
  "version": "2.0.1",
  "description": "A formatter for Node.js console logs.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "dev": "tsc --watch",
    "build": "tsc",
    "lint": "eslint --ignore-path .gitignore --ext .js,.ts .",
    "lintfix": "npm run lint -- --fix",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Armando284/format-logs.git"
  },
  "keywords": [
    "formatter",
    "format",
    "colors",
    "color",
    "node",
    "console",
    "log",
    "debug"
  ],
  "author": "Armando J. Pe√±a Tamayo",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Armando284/format-logs/issues"
  },
  "homepage": "https://github.com/Armando284/format-logs#readme",
  "devDependencies": {
    "@types/jest": "^29.2.5",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-standard-with-typescript": "^26.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.6.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.3.1",
    "prettier": "^2.8.2",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.4"
  },
  "files": [
    "lib/**/*"
  ]
}
